@model Speakster.Models.ChangeProfilePictureViewModel
@{
    ViewBag.Title = "ProfilePicture";
}
<div class="container">
    @using (Html.BeginForm("ProfilePicture", "Users", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

        @Html.HiddenFor(model => model.id)

        if (Model.ProfilePicture != null)
        {
            <img src="@Url.Content("~/" + @Model.ProfilePicture)" width="130" height="130" />
        }
        else
        {
            <div class="noPicture"></div>
        }
        <input class="btn btn-default" type="file" id='imgfile' name="UserPicture" onchange='loadImage("", "", "imgfile","#profilePicture");' />
        <br/>
        <input class="btn btn-primary" type="submit" value="Send" />
    }
</div>
