@using Microsoft.AspNet.Identity
@{
    Layout = null;
}

@if (ViewBag.Messages != null)
{
        <div class="messageContainer" id="detailsDiv">
            <div class="messageContainer" id="detailsDiv">
                <div class="message @(ViewBag.Messages.Sender.Equals(User.Identity.GetUserId()) ? "mine": "his" )">
                    <div class="@(ViewBag.Messages.Sender.Equals(User.Identity.GetUserId()) ?  "myMessageArrow" : "hisMessageArrow")"></div>
                    <span>@ViewBag.Messages.Message</span>
                </div>

                <div class="@(ViewBag.Messages.Sender.Equals(User.Identity.GetUserId()) ?  "mineTimeStamp" : "hisTimeStamp")">@ViewBag.Messages.Date</div>
            </div>

        </div>

}
