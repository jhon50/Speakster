@model Speakster.Models.Language
@using (Html.BeginForm("HomeLanguages", "Home", FormMethod.Post))
{
    @Html.AntiForgeryToken()


    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="content-objects">
        <h4 id="quero-falar">Quero falar</h4>

        @Html.DropDownList("Id", null, htmlAttributes: new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Id, "", new { @class = "text-danger" })
        <input id="arrow-right" type="image" src="../../images/arrow-right.png" height="48" width="48" border="0" alt="Submit Form">
    </div>
}
